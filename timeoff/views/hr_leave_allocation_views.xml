<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_allocation_view_form_manager_cus" model="ir.ui.view">
        <field name="name">hr.leave.allocation.view.form.manager.cus</field>
        <field name="model">hr.leave.allocation</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
        <field name="mode">primary</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_id']" position="after">
                <field name="contract_type" groups="hr_holidays.group_hr_holidays_user"
                    attrs="{'required': [('holiday_type', '=', 'contract')], 'invisible': [('holiday_type', '!=', 'contract')]}"/>
            </xpath>
        </field>
    </record>
</odoo>