<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_leave_view_cus_form" model="ir.ui.view">
        <field name="name">hr.leave.view.cus.form</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='title']/h2/field[@name='holiday_status_id']" position="replace">
                <field name="holiday_status_id" nolabel="1" domain="['&amp;', ('virtual_remaining_leaves', '&gt;', -1), '|', ('allocation_type', 'in', ['fixed_allocation', 'no']),'&amp;',('allocation_type', '=', 'fixed'), ('max_leaves', '>', '0')]" context="{'employee_id':employee_id, 'default_date_from':date_from}" options="{'no_create': True, 'no_open': True}" class="w-100"/>
            </xpath>
        </field>
    </record>
</odoo>
