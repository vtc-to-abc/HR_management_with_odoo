<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="custom_employee_contract_view" model="ir.ui.view">
            <field name="name">custom.employee.contract.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree string="hợp đồng" multi_edit="1" sample="1">
                        <field name="contract_type" readonly="1"/>
                        <field name="name" readonly="1"/>
                        <field name="contract_term" readonly="1"/>
                        <field name="date_start" readonly="1"/>
                        <field name="date_end" readonly="1"/>
                        <field name="wage_form" readonly="1"/>
                    </tree>
                </xpath>
            </field>
        </record>

        <record id="custom_hr_contract_view_form" model="ir.ui.view">
            <field name="name">custom.hr.contract.view.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//div[@name='title']" position="after">
                    <group>
                        <field name="contract_type"/>
                    </group>
                </xpath>
                <xpath expr="//group/group[1]" position="after">
                    <group>
                        <field name="employee_id" string = "Nhân Viên"/>
                        <field name="department_id" string = "Bộ Phận"/>
                        <field name="job_id" string = "Chức Vụ"/>
                        <field name="structure_type_id" domain="['|', ('country_id', '=', False), ('country_id', '=', company_country_id)]"
                               string="Cau tuc luong"/>
                    </group>
                </xpath>

                <xpath expr="//group/group[@name='duration_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group/group[@name='duration_group']" position="after">
                    <group>
                        <field name="date_start"/>
                        <field name="contract_term"/>
                        <field name="date_end"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>