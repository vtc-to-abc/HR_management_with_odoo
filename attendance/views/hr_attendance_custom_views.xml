<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="custom_view_attendance_tree" model="ir.ui.view">
            <field name="name">custom.view.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[1]" positon="before">
                    <field name="attendant_code" optional="hide"/>
                </xpath>
                <xpath expr="//tree/field[@name='employee_id']" position='attributes'>
                    <attribute name="string">Nhan vien</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='check_in']" position="attributes">
                    <attribute name="string">Gio vao</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='check_out']" position="attributes">
                    <attribute name="string">Gio ra</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='worked_hours']" position="attributes">
                    <attribute name="string">Gio lam viec</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='worked_hours']" position="after">
                    <field name="working_time" optional="hide" readonly="True"/>
                    <field name="leave_status_in_day" readonly="1"/>
                    <field name="pay_type" optional="hide"/>
                    <field name="off_explain_need" readonly="1"/>
                    <field name="number_late" optional="hide" readonly="True"/>
                    <field name="state"/>
                    <field name="workday_confirm" optional="hide" readonly="True"/>
                    <field name="late_confirm" optional="hide" readonly="True"/>
                    <button type="object" name="action_off_explain"  string="Giai Trinh" />
                    <field name="off_explain_content" optional="hide" readonly="True"/>
                    <field name="refuse_reasson" optional="hide" readonly="True"/>
                    <field name="work_day" optional="hide" readonly="True"/>
                </xpath>
            </field>
        </record>

        <record id="view_approval_tree" model="ir.ui.view" >
            <field name="name">view.approval.tree</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <tree string = 'Approval' multi_edit="1" sample="1">
                    <field name="employee_id" readonly="True"/>
                    <field name="off_explain" readonly="True" optional="hide"/>
                    <button type="object" name="action_approve" string="Phe Duyet" attrs="{'invisible': [('state', '=', 'approved')]}"/>
                    <field name="state" readonly="True" />
                </tree>
            </field>
        </record>

        <record id="custom_view_attendance_explain" model="ir.ui.view">
            <field name="name">custom.view.attendance.explain</field>
            <field name="model">attendance.explain</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="attendance_id" readonly="1" invisible="1"/>
                        <field name="off_explain_content"/>
                    </group>
                    <footer>
                        <button type="object" name="action_off_explain_content" class="oe_highlight" string="Xac Nhan"/>
                        <button class="btn btn-secondary" special="cancel" string="huy"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_approval_popup_from" model="ir.ui.view">
            <field name="name">view.approval.popup.form</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//field[@name='check_in']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//field[@name='check_out']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//sheet" position="inside">
                    <group>
                        <field name="off_explain_content" readonly="1" attrs="{'invisible': [('off_explain_content', '=', '')]}"/>
                        <field name="state" invisible="1"/>
                    </group>
                    <group>
                        <field name="work_day" readonly="True"/>
                        <field name="workday_confirm" />
                    </group>
                    <group>
                        <field name="number_late" readonly="True"/>
                        <field name="late_confirm"/>
                    </group>
                    <footer>
                        <button type="object" name="action_approval_validate" class="oe_highlight" string="Xac Nhan" />
                        <button type='object' name="action_approval_refuse" class="oe_highlight" string="Tu Choi" attrs="{'invisible': [('state', '=', 'refuse')]}"/>
                        <button class="btn btn-secondary" special="cancel" string="huy"/>
                    </footer>
                </xpath>
            </field>
        </record>

        <record id="attendance_approval_refuse_popup" model="ir.ui.view">
            <field name="name">attendance.approval.refuse.popup</field>
            <field name="model">attendance.refuse</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="attendance_id" readonly="1" invisible="1"/>
                        <field name="refuse_reasson"/>
                    </group>
                    <footer>
                        <button type="object" name="action_refuse_reasson" class="oe_highlight" string="Xac Nhan"/>
                        <button class="btn btn-secondary" special="cancel" string="huy"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="hr_approval_action" model="ir.actions.act_window">
            <field name="name">Approval</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_mode">tree</field>
            <field name="context">{"search_default_today":1}</field>
            <field name="view_id" ref="view_approval_tree"/>
            <field name="domain">[('state','in',['wait', 'approved', 'refuse'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No attendance records found
                </p>
                <p>
                    The attendance records of your employees will be displayed here.
                </p>
            </field>
        </record>

        <record id="hr_attendance_action1" model="ir.actions.act_window">
            <field name="name">Attendances</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_mode">tree</field>
            <field name="context">{"search_default_today":1}</field>
            <field name="view_id" ref="custom_view_attendance_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No attendance records found
                </p>
                <p>
                    The attendance records of your employees will be displayed here.
                </p>
            </field>
        </record>
        <!--menu-->

        <delete id="hr_attendance.menu_hr_attendance_my_attendances" model="ir.ui.menu"/>
        <delete id="hr_attendance.menu_hr_attendance_kiosk_no_user_mode" model="ir.ui.menu"/>
        <delete id="hr_attendance.menu_hr_attendance_manage_attendances" model="ir.ui.menu"/>
        <delete id="hr_attendance.menu_hr_attendance_report" model="ir.ui.menu"/>

        <menuitem id="menu_hr_attendance_root" name="Custom Attendances" sequence="90" groups="hr_attendance.group_hr_attendance,hr_attendance.group_hr_attendance_kiosk" web_icon="hr_attendance,static/description/icon.png"/>
        <menuitem id="menu_hr_attendance_view_attendances" name="Attendances" parent="menu_hr_attendance_root" sequence="10" groups="hr_attendance.group_hr_attendance_user" action="hr_attendance_action1"/>
        <menuitem id="menu_hr_attendance_view_approval" name="Approval" parent="menu_hr_attendance_root" sequence="20" groups="hr_attendance.group_hr_attendance_user" action="hr_approval_action"/>
    </data>
</odoo>
